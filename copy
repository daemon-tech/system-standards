# Custom Aliases
alias cls="clear"
alias sup="sudo apt update && apt dist-upgrade && apt autoremove && apt autoclean"
alias rebash='. ~/.bashrc'
alias pico="nano -wcAiL"
alias nano="nano -wcAiL"
alias cleanup="sudo apt autoremove && apt autoclean"

# Custom ls Aliases
alias ll='ls -l'
alias la='ls -A'


function apt-updater {
	apt-get update &&
	apt-get dist-upgrade -Vy &&
	apt-get autoremove -y &&
	apt-get autoclean &&
	apt-get clean &&
	}

