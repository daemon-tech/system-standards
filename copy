# ~ Colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# ~ Custom Aliases
alias cls="clear"
alias sup="sudo apt update && apt dist-upgrade && apt autoremove && apt autoclean"
alias rebash='. ~/.bashrc'
alias pico="nano -wcAiL"
alias nano="nano -wcAiL"
alias gadd="git add ."
alias gccommit="git commit -m"
alias gpush="git push origin main"
alias cleanup="sudo apt autoremove && apt autoclean"

# Custom ls Aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

function apt-updater {
	apt-get update &&
	apt-get autoremove -y &&
	apt-get autoclean &&
	apt-get clean &&
	}

# NVM Loader
export NVM_DIR="/home/daem0n/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
